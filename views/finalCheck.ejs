    <style>
        .card {
            margin: 0 30px 20px 0;
            border-radius: 0;
        }

        .card-header {
            background-color: #080b1ac0;
            color: white;
        }
    </style>
</head>

<body>

    <!--== Start Heade r Area Wrapper ==-->
    <%- include("partials/navbar") -%>
    <!--== End Header Area Wrapper ==-->



    <!--== Start Contact Page Area Wrapper ==-->
    <div class="contact-page-area-wrapper sp-y">
        <div class="container">
            <div class="contact-content-wrap">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="contact-form-area contact-method">
                            <h3>Final Details</h3>

                            <div class="contact-form-wrap">
                                <form method="POST" action="/finalCheckout" id="contact-form">
                                    <div class="row">

                                        <div class="col-md-12">
                                            <div class="card ">
                                                <div class="card-header">
                                                    Address
                                                </div>
                                                <div class="card-body">
                                                    <span style="font-weight: bold;"> Full Name:</span>
                                                    <%= purchaseDetail.address.full_name %> <br>
                                                    <span style="font-weight: bold;">Mobile Number:</span>
                                                    <%= purchaseDetail.address.mobile_number %> <br>
                                                    <span style="font-weight: bold;">Pin Code :</span>
                                                    <%= purchaseDetail.address.pin_code %> <br>
                                                    <span style="font-weight: bold;">Flat Number:</span>
                                                    <%= purchaseDetail.address.flat_number %> <br>
                                                    <span style="font-weight: bold;">Rest Address:</span>
                                                    <%= purchaseDetail.address.area %>,<%= purchaseDetail.address.landmark %>,<%= purchaseDetail.address.town %>,<%= purchaseDetail.address.state %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    Cart Details
                                                </div>
                                                <div class="card-body">
                                                    <% purchaseDetail.cart.forEach(function(e){ %>
                                                    <%= e.amount_text %> |
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="single-input-item mb-0 mt-40">
                                                <button type="submit" class="btn-outline">Payment</button>
                                            </div>
                                            <div class="single-input-item mb-0 mt-40">
                                                <a href="/address" class="btn-outline">Go Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--== End Contact Page Area Wrapper ==-->

    <%- include("partials/footer") -%>
    <!--== End Footer Area Wrapper ==-->

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
