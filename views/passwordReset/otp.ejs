  <body>
    <!--== Start Header Area Wrapper ==-->
    <%- include("../partials/navbar") -%>

    <!--== Start Contact Page Area Wrapper ==-->
    <div class="contact-page-area-wrapper sp-y">
      <div class="container">
        <% if(message){ %>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <strong>Oops!</strong> <%= message %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
        <div class="contact-content-wrap">
          <div class="row">
            <div class="col-lg-8">
              <div class="contact-form-area contact-method">
                <h3>OTP</h3>

                <div class="contact-form-wrap">
                  <form action="/getOTP" method="post" id="contact-form">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="single-input-item">
                          <label>
                            <input
                              type="number"
                              name="otp"
                              placeholder="Enter The OTP *"
                              required
                            />
                          </label>
                        </div>
                      </div>

                      <div class="col-12">
                        <div class="row">
                          <div class="single-input-item mb-0 mt-40 col-lg-6">
                            <button type="submit" class="btn-outline">
                              Go forward
                            </button>
                          </div>
                          <div class="single-input-item mb-0 mt-40 col-lg-6">
                            <a href="/" class="btn-outline">Go Home</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="contact-information contact-method">
                <div class="contact-info-con">
                  <h3>Contact Info</h3>

                  <div class="widget-item m-0">
                    <address>
                      Karol Bagh, Okhla and Rohini <br />Al Maktoum Rd - Deira -
                      Riggat Al Buteen - Dubai - United Arab Emirates

                      <br />
                      support@lehrisecurrency.com
                      <br />

                      <br />
                      +971544212686
                    </address>
                  </div>
                  <div class="member-social-icons mt-30">
                    <a href="#"><i class="mdi mdi-facebook"></i></a>
                    <a href="#"><i class="mdi mdi-twitter"></i></a>
                    <a href="#"><i class="mdi mdi-linkedin"></i></a>
                    <a href="#"><i class="mdi mdi-pinterest"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--== End Contact Page Area Wrapper ==-->

    <!--=======================Javascript============================-->

    <!--=== REVOLUTION JS ===-->
    <script src="/js/revslider/rev-active.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <!--=== Active Js ===-->
    <%- include("../partials/footer",{user:user}) -%>
    <!--== End Footer Area Wrapper ==-->
    <script src="/js/active.min.js"></script>
    <script>
      let login_form = $("#login_form");
      let register_form = $("#register_form");
      $("#register_click").click(function () {
        login_form.hide();
        register_form.show();
      });
      $("#get_login").click(function () {
        register_form.hide();
        login_form.show();
      });
    </script>
    <!-- REVOLUTION JS FILES -->
    <script src="/js/revslider/jquery.themepunch.tools.min.js"></script>
