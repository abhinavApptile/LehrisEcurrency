                $('#amt').text(activeAmt)

            })

            ////



            ////
            $('#toggleCartRight, .positionFixedLeft, .hideRightBar').click(function (e) {
                e.preventDefault()
                $('.positionFixedLeft').fadeToggle(500)
                $('html').hasClass('stop-scrolling') ? $('html').removeClass('stop-scrolling') : $('html').addClass('stop-scrolling')
                $('.positionFixed').toggle()
                $('.positionFixed').addClass('moveFromRight')
            })

            ////
            let cart_data = [];
            let amount_input = $("#amount_input")
            amount_input.click(function () {
                $(".amt-btn").each(function (e) {
                    if ($(this).hasClass("active")) {
                        $(this).removeClass("active")
                    }
                });
                $("#amt").text("")

            });
            $('.addToCart').click(function (e) {
                e.preventDefault()
                if ($('#tabTwo').parent('li').hasClass('active')) {
                    $('#tabOne').click()
                    return false
                }
                $(this).prop('disabled', true)

                var cardInCart = parseInt($('.cardCount:first').text())
                $('.new-card').addClass('add-to-cart')
                var cur = $('.cur-btn.active').text()
                var amt = $('.amt-btn.active').attr('data-product-price')
                var amt_text = $('.amt-btn.active').text()
                var qty = $('#countV').val()
                var productId = $('.amt-btn.active').attr('data-product-id')
                let amount_obj = { currency: cur, amount: amt, amount_text: amt_text, quantity: qty, productId };
                cart_data.push(amount_obj);
                let custom_value = $("#amount_input").val();
                if (custom_value >= 20) {
                    cart_data.push({ currency: "INR", amount: custom_value, amount_text: `INR ${custom_value}`, quantity: "1", productId: (Math.random() * 100).toString() });
                    $('#cardAppendCart').append(createCardInCart("USD", custom_value, "1", custom_value, `USD ${custom_value}`));
                    $("#amount_input").val(0);
                    localStorage.setItem("cartUsd", JSON.stringify(cart_data));

                }
                localStorage.setItem("cartUsd", JSON.stringify(cart_data));
                let cart_alert = $("#cart_alert");
                cart_alert.addClass("show");
                cart_alert.removeClass("fade");
                setTimeout(function () {
                    cart_alert.removeClass("show");
                    cart_alert.addClass("fade");
                }, 2000);

                setTimeout(() => {

                    if (cur === 'INR') {

                        $('.cur-btn:last').prop('disabled', true)
                        $('.inr-wrap').addClass('active').show()
                        $('.usd-wrap').removeClass('active').hide()
                        $('#currency').text('INR')
                        $('#amt').text(amt_text)

                    } else if (cur === 'USD') {

                        $('.cur-btn:first').prop('disabled', true)
                        $('.inr-wrap').removeClass('active').hide()
                        $('.usd-wrap').addClass('active').show()
                        $('#currency').text('USD')
                        $('#amt').text(amt_text)

                    }

                    $('#countV').val('1')

                    $('.cardCount').text(++cardInCart)

                    $('.new-card').removeClass('add-to-cart').addClass('come-from-top').removeClass('img-more')
                    $('#cardAppendCart').append(createCardInCart(cur, amt, qty, productId, amt_text))
                    rmSingleCard()

                }, 500)

                setTimeout(() => {

                    $('.new-card').removeClass('come-from-top')
                    $(this).prop('disabled', false)
                    var newCount = count - 1
                    $('#qtyS' + newCount).val(qty)
                    setAmtToPay()

                }, 700)

            })

            ////
            $('#deleteAllCards').click(function (e) {

                e.preventDefault()
                $('.cardCount').text('0')
                $('#cardAppendCart').html('')
                $('.cur-btn').prop('disabled', false)
                $('#checkoutForm').html('')
                cart_data = [];
                localStorage.setItem("cartInr", JSON.stringify(cart_data));

            })



            ////
            count = 0
            const createCardInCart = (cur, amt, qty, productId, amt_text) => {

                var newAmt = '0'

                newAmt = amt.replace(/\,/g, '')

                var newCard = '<div class="card-wrapper-cart">' +
                    '<div style="margin-top:30px" class="edit-new-card">' +
                    '    <img class="edit-new-card-img" src="/img/astropay-logo-white.svg" alt="svg">' +
                    '    <p class="card-value"><span class="inr-value" >' + amt_text + '' +
                    '' +
                    '<br><br>' +
                    '<div class="row" style="margin: 0;">' +

                    '<div class="col-md-6">' +
                    '    <a href="#" productId=' + productId + ' class="removeSingleCard" data-removeFormId="#removeThisF' + count + '" style="position: relative; top: 85px; left: 10px;text-align:center"><i class="fa fa-trash" style="color: red;"> Remove' +
                    '' +
                    ' <br>' +
                    '<input type="hidden" name="product_id[]" value="' + productId + '">' +
                    '<input type="hidden" name="amt[]" value="' + newAmt + '">' +
                    '<input type="hidden" name="cur[]" value="' + cur + '">' +
                    '<input type="hidden" name="qty[]" value="' + qty + '">' +
                    ''

                $('#checkoutForm').append('<div class="removeAllF" id="removeThisF' + count + '" hidden>' +
                    '<input type="hidden" name="product_id_r[]" value="' + productId + '">' +
                    '<input type="hidden" name="amt_r[]" value="' + newAmt + '">' +
                    '<input type="hidden" name="cur_r" value="' + cur + '">' +
                    '<input type="hidden" name="qty_r[]" value="' + qty + '">' +
                    '')

                count++
                return newCard

            }

            ////
            const rmSingleCard = function () {

                $('.removeSingleCard').unbind().click(function (e) {

                    e.preventDefault();
                    let productId = $(this).attr("productId");
                    let cartItem = JSON.parse(localStorage.cartUsd);
                    cartItem.forEach(function (e) {
                        if (e.productId === productId) {
                            let index = cartItem.indexOf(e)
                            cartItem.splice(index, 1);
                            localStorage.setItem("cartUsd", JSON.stringify(cartItem));
                            cart_data.splice(index, 1)
                        }
                    })
                    $(this).parent().parent().parent().remove()
                    var totalCards = parseInt($('.cardCount:first').text())
                    $('.cardCount').text(--totalCards)

                    if (totalCards === 0) {
                        $('.cur-btn').prop('disabled', false)
                        $('#checkoutForm').html('')
                    }

                    let rm = $(this).attr('data-removeFormId')
                    $(rm).remove()

                })

            }

            const setAmtToPay = () => {

                var totalRupAmt = 0
                var totalDolAmt = 0
                var amtSel = $('input[name="amt[]"]')
                var curSel = $('input[name="cur[]"]')
                var qtySel = $('input[name="qty[]"]')
                var amtArr = new Array()
                var curArr = new Array()
                var qtyArr = new Array()
                $.each(amtSel, function (i, val) {
                    amtArr[i] = parseInt($(this).val())
                })

                $.each(curSel, function (i, val) {
                    curArr[i] = $(this).val()
                })

                $.each(qtySel, function (i, val) {
                    qtyArr[i] = $(this).val()
                })

                $.each(amtArr, function (i, val) {

                    if (curArr[i] === 'USD') {
                        totalDolAmt += (amtArr[i] * qtyArr[i])
                    } else if (curArr[i] === 'INR') {
                        totalRupAmt += (amtArr[i] * qtyArr[i])
                    }
                })

                if (totalDolAmt !== 0 && totalRupAmt === 0) {
                    $('.amtToPay').html('<span> USD ' + totalDolAmt)
                } else if (totalRupAmt !== 0 && totalDolAmt === 0) {
                    $('.amtToPay').html('<span> INR ' + totalRupAmt)
                }
                console.log(amtArr)
                console.log(qtyArr)
                console.log(curArr)

            }

            $(".checkout-active").click(function (e) {
                if (cart_data.length !== 0) {
                    $.post("/ecommerce", { cartData: JSON.stringify(cart_data) });
                    window.location.replace("/address");
                }
            });
            let stored_item = JSON.parse(localStorage.cartUsd);
            $('.cardCount').text(stored_item.length)
            stored_item.forEach(function (e) {
                $('#cardAppendCart').append(createCardInCart(e.currency, e.amount, " 1", e.productId, e.amount_text))
            })
            cart_data = stored_item
        })

    </script>

